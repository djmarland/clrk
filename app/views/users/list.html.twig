{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}

    <h1>Users</h1>
    <a href="{{ app.url_generator.generate('users_new') }}">New</a>

    <p>Total: {{ total }}</p>
    <ul>
    {% for user in users %}
        <li><a href="/users/{{ user.key }}">{{ user.email }}</a></li>
    {% endfor %}
    </ul>

    {% include pagination.templatePath with pagination.vars only %}

{% endblock %}
